/* 轮播图片 */
.slide-image {
  width: 100%;
  height: 500rpx;
}
swiper {
  height: 500rpx;
}
/* 特殊入口 */
.btn-enter {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  background: #fff;
}
.enter-item {
  text-align: center;
  font-size: 28rpx;
}
.enter-item .van-icon {
  font-size: 60rpx;
}
/* 列表样式 */
.list-tlt {
  padding: 20rpx;
  text-align: center;
  font-size: 34rpx;
  background: #fff;
  margin-bottom: 1px;
}
.list-tlt van-icon {
  font-size: 34rpx;
  vertical-align: middle;
}
.van-card__price {
  color: #FF0000;
}