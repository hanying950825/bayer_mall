.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.jumpto-category {
	background: linear-gradient(to bottom right,red,blue);
	color: #fff;
	border-radius: 50rpx;
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 30rpx;
	margin: 0 auto;
	text-align: center;
}