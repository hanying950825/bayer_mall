.container-classify {  
  position: absolute;  
  width: 100%;  
  height: 100%;  
  background-color: #fff;  
  color: #939393; 
}
.container-classify van-badge-group {
  display: inline-block;
  width: 24%;
}
.container-classify .right-msg {
  display: inline-block;
  width: 76%;
}
/* 存在列表时，内容样式 */
.right-msg {
  position: fixed;
  top: 0;
  margin-top: 20rpx;
}
.classify-img {
  width: 160rpx;
  height: 160rpx;
  display: block;
}
van-col {
  text-align: center;
  font-size: 30rpx;
}
/* 不存在内容 样式 */
.nodata_text {
  color: black;
  font-size: 14px;  
  text-align: center;  
} 
