<!-- 商品轮播图 -->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" mode="aspectFill" bindtap="previewImage"/>
    </swiper-item>
  </block>
</swiper>

<!-- 商品详细信息 -->
<view class="product-info">
	<view class="product-name">{{goodsTitle}}</view>
	<view class="product-price">
		<text class="product-price-new">￥{{goodsPrice}}</text>
		<text class="product-price-old">原价￥{{goodsPrivilegePrice}}</text>
	</view>
  <view class="stock">库存：{{stock}}</view>
</view>

<view class="details"> 
  <scroll-view scroll-y="true">
    <view class="goods-detail"><text class="detail-line"> —— </text>商品详情<text class="detail-line"> —— </text></view>
    <block wx:for-items="{{goodsDetailImg}}" wx:key="name">
       <image class="image-detail" src="{{item}}" mode="widthFix" bindtap="previewImage"/> 
    </block>
    <view class="temp"></view>
  </scroll-view>

  <van-action-sheet show="{{ show }}" title="加入购物车" bind:close="onClose">
    <view class="shop-btn" wx:for="{{productList}}" wx:key="index">
      <van-button plain round type="{{btnColor}}" data-id="{{item}}" bind:tap="onSaveShop">{{item.productName}}</van-button>
    </view>
  </van-action-sheet>

  <van-row class="footer-btn">
    <van-col span="4">
      <van-icon name="chat" />
      <view>客服</view>
    </van-col>
    <van-col span="4">
      <van-icon name="cart" bind:click="onCartPage"/>
      <view>购物车</view>
      <van-tag round type="danger" wx:if="{{cartNum>0}}">{{cartNum}}</van-tag>
    </van-col>
    <van-col span="4">
      <van-checkbox use-icon-slot value="{{ checked }}" bind:change="onChange">
        <image slot="icon" src="{{ checked ? icon.normal : icon.active }}" />
      </van-checkbox>
      <view>{{checked ? '已收藏' : '收藏'}}</view>
    </van-col>
    <van-col span="6">
      <van-button type="warning" size="large" bind:tap="showModal">加入购物车</van-button>
    </van-col>
    <van-col span="6">
      <van-button type="danger" size="large" bind:tap="showModal">立即购买</van-button>
    </van-col>
  </van-row>

  <!-- 加入购物车弹框 -->
  <!--屏幕背景变暗的背景  -->
  <view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
  <!--弹出框  -->
  <view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
   <view class="column">
      <text class="sku-price">￥{{gg_price}}</text>
      <text class="sku-title"><block wx:if="{{gg_txt==''}}">请选择规格</block><block wx:else>已选择{{gg_txt}}ml</block></text>
   </view>
   <text class="line"></text>
   <view class="guige">
      <text class="gg-title">规格</text>
      <view class="gg">
        <text  wx:for="{{guigeList}}" wx:key="gg" wx:for-item="item" class="{{gg_id==item.productName?'active':''}}" data-id="{{item.productName}}"  data-txt="{{item.productName}}" data-price='{{item.retailPrice}}' bindtap="filter">{{item.productName}}</text>
      </view>
   </view>
   <text class="line"></text>
   <view class="row">
      <text >数量</text>
      <view class="quantity-position">
          <view class="stepper">
          <!-- 减号 -->  
          <text class="{{minusStatus}}" bindtap="bindMinus">-</text>
          <!-- 数值 -->  
          <input type="number" bindinput='bindManual' value="{{num}}" />
          <!-- 加号 -->  
          <text class="normal" bindtap="bindPlus">+</text>
          </view>
      </view>
   </view>
   <text class="line"></text>
   <view class="btn">
    <button class="button-add" bindtap="addCart">加入购物车</button>
   </view>
</view>

 </view>

