/* pages/personal/address/address.wxss */
/* 列表 */
.ads-list-card {
  background: #fff;
  margin: 20rpx;
  padding: 10rpx 20rpx 0;
}
.main-name, .main-phone, .main-ads {
  display: inline-block;
  font-size: 30rpx;
}
.main-phone {
  margin-left: 20rpx;
}
.main-ads {
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
	font-size: 26rpx;
}
.address {
  margin-top: 10rpx;
  border-bottom: 1px solid #F7F7FA;
	color: rgb(161, 161, 165);
}
.function-ads {
  display: flex;
  justify-content: space-between;
	height: 60rpx;
	line-height: 50rpx;
}
.van-checkbox__label {
  font-size: 28rpx;
}
.func-btn .delete, .func-btn .edit, .func-btn .default{
  display: inline-block;
  font-size: 28rpx;
}
.delete {
	margin-right: 20rpx;
}
.func-btn .edit, .func-btn .default {
  margin-left: 10rpx;
}
.func-btn text {
  display: inline-block;
  margin-left: 10rpx;
}

/* 底部按钮 */
.footer-btn {
  text-align: center;
  background: #fff;
  padding: 20rpx 0;
  position: fixed;
  bottom: 0;
  width: 100%;
}
.van-button {
  width: 96%;
	margin: 0 auto;
}
.container-ads {
  width: 100%;
  height: 100%;
}
.none-list {
  text-align: center;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}