/* 头部样式 */
.personal-header {
  width: 100%;
  height: 300rpx;
  text-align: center;
  background: #37383C;
  
  
}
/* 未登录状态 */
.usermotto {
  width: 100%;
}
.usermotto .login-Btn {
  border-radius: 20rpx;
  width: 200rpx;
  font-size: 30rpx;
  top: 100rpx;
}
/* 已登录状态 */
.userInfo {
  height: 300rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.userInfo-ava {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;
  font-size: 30rpx;
  /* position: absolute;
  top: 50rpx;
  left: 35%; */
}
/* 我的订单 */
.all-my-order {
  background: #fff;
  margin-top: 15rpx;
	margin-bottom: 10rpx;
}
.all-my-order .van-cell__value {
  color: #AFAFB0;
}
/* 订单按钮入口 */
.btn-order {
  padding: 10rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx
}
.enter-item {
  text-align: center;
  font-size: 24rpx;
}
.enter-item .van-icon {
  font-size: 50rpx;
}
/* 其他功能 */
.other-func {
  margin-top: 10rpx;
}