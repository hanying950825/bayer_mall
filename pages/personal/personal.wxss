/* 定义页面底色 */
page {
  background: #F7F7FA;
}
/* 头部样式 */
.personal-header {
  width: 100%;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  background: #000;
  
  
}
/* 未登录状态 */
.usermotto {
  width: 100%;
}
.usermotto .login-Btn {
  border-radius: 20rpx;
  width: 200rpx;
  font-size: 30rpx;
  top: 100rpx;
}
/* 已登录状态 */
.userInfo {
  height: 300rpx;
}
.userInfo-ava {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;
  font-size: 30rpx;
  height: 50rpx;
  display: block;
  position: absolute;
  top: 50rpx;
  left: 35%;
}
/* 我的订单 */
.all-my-order {
  background: #fff;
  margin-top: 15rpx;
}
.my-order {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 15rpx;
  vertical-align: middle;
  border-bottom: 1px solid #F7F7FA;
}
.all-order {
  color: #AFAFB0;
}
.my-order .van-icon {
  font-size: 28rpx;
  color: #AFAFB0;
  vertical-align: middle;
}
/* 订单按钮入口 */
.btn-order {
  padding: 10rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx
}
.enter-item {
  text-align: center;
  font-size: 24rpx;
}
.enter-item .van-icon {
  font-size: 50rpx;
}
/* 其他功能 */
.other-fun {
  background: #fff;
  margin-top:15rpx;
}
.other-fun .other-item {
  border-bottom: 1px solid #F7F7FA;
  display: flex;
  justify-content: space-between;
  padding: 15rpx;
  font-size: 28rpx;
}
.other-item .van-icon {
  font-size: 28rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}